{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2018",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "outDir": "./dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["functions/**", "node_modules/**", "dist/**"]
}
